// tsconfig.node.json
{
  "compilerOptions": {
    "composite": true, // *** เพิ่มบรรทัดนี้ ***
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "lib": ["ES2020"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["node"],
    // "noEmit": true, // *** ลบบรรทัดนี้ หรือเปลี่ยนเป็น false ถ้ามีอยู่ ***
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["vite.config.ts"]
}